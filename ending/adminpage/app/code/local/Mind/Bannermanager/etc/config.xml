<config>
    <modules>
        <Mind_Bannermanager>
            <version>0.1.0</version>
        </Mind_Bannermanager>
    </modules>
    <frontend>
        <routers>
            <bannermanager>
                <use>standard</use>
                <args>
                    <module>Mind_Bannermanager</module>
                    <frontName>bannermanager</frontName>
                </args>
            </bannermanager>
        </routers>
        <layout>
            <updates>
                <bannermanager>
                    <file>bannermanager.xml</file>
                </bannermanager>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<bannermanager>
				<use>admin</use>
				<args>
					<module>Mind_Bannermanager</module>
					<frontName>bannermanager</frontName>
				</args>
			</bannermanager>
        </routers>
    </admin>
    <adminhtml>

		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Mind_Bannermanager>
							<title>Bannermanager Module</title>
							<sort_order>10</sort_order>
						</Mind_Bannermanager>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<bannermanager>
					<file>bannermanager.xml</file>
				</bannermanager>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <bannermanager>
                <class>Mind_Bannermanager_Model</class>
                <resourceModel>bannermanager_mysql4</resourceModel>
            </bannermanager>
            <bannermanager_mysql4>
                <class>Mind_Bannermanager_Model_Mysql4</class>
                <entities>
                    <bannermanager>
                        <table>bannermanager</table>
                    </bannermanager>
                </entities>
            </bannermanager_mysql4>
        </models>
        <resources>
            <bannermanager_setup>
                <setup>
                    <module>Mind_Bannermanager</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bannermanager_setup>
            <bannermanager_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bannermanager_write>
            <bannermanager_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bannermanager_read>
        </resources>
        <blocks>
            <bannermanager>
                <class>Mind_Bannermanager_Block</class>
            </bannermanager>
        </blocks>
        <helpers>
            <bannermanager>
                <class>Mind_Bannermanager_Helper</class>
            </bannermanager>
        </helpers>
    </global>
</config>