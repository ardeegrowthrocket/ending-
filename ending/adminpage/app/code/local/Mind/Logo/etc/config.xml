<config>
    <modules>
        <Mind_Logo>
            <version>0.1.0</version>
        </Mind_Logo>
    </modules>
    <frontend>
        <routers>
            <logo>
                <use>standard</use>
                <args>
                    <module>Mind_Logo</module>
                    <frontName>logo</frontName>
                </args>
            </logo>
        </routers>
        <layout>
            <updates>
                <logo>
                    <file>logo.xml</file>
                </logo>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<logo>
				<use>admin</use>
				<args>
					<module>Mind_Logo</module>
					<frontName>logo</frontName>
				</args>
			</logo>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Mind_Logo>
							<title>Logo Module</title>
							<sort_order>10</sort_order>
						</Mind_Logo>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<logo>
					<file>logo.xml</file>
				</logo>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <logo>
                <class>Mind_Logo_Model</class>
                <resourceModel>logo_mysql4</resourceModel>
            </logo>
            <logo_mysql4>
                <class>Mind_Logo_Model_Mysql4</class>
                <entities>
                    <logo>
                        <table>logo</table>
                    </logo>
                </entities>
            </logo_mysql4>
        </models>
        <resources>
            <logo_setup>
                <setup>
                    <module>Mind_Logo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </logo_setup>
            <logo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </logo_write>
            <logo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </logo_read>
        </resources>
        <blocks>
            <logo>
                <class>Mind_Logo_Block</class>
            </logo>
        </blocks>
        <helpers>
            <logo>
                <class>Mind_Logo_Helper</class>
            </logo>
        </helpers>
    </global>
</config>